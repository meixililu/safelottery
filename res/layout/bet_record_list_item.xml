<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_7"
    android:paddingRight="@dimen/margin_7" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buy_lottery_cz_bg_selector"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:orientation="vertical" 
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/bet_record_lottery_name_image"
                android:layout_width="@dimen/lottery_icon_width_samll"
                android:layout_height="@dimen/lottery_icon_heigh_samll"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/big_m" 
                />

            <TextView
                android:id="@+id/bet_record_lottery_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_l" 
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bet_record_lottery_issue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/content_txt_6"
                    android:layout_weight="1"
                    android:textSize="@dimen/middle_l" />
				
                <TextView
                    android:id="@+id/bet_record_lottery_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下注时间:"
                    android:textColor="@color/content_txt_6"
                    android:textSize="@dimen/middle_l" />

                <TextView
                    android:id="@+id/bet_record_lottery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/content_txt_6"
                    android:textSize="@dimen/middle_l" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/line" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/record_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="金额"
                    android:textColor="@color/content_txt_A"
                    android:textSize="@dimen/middle_l" />

                <TextView
                    android:id="@+id/record_money_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="3dp"
                    android:text="奖金"
                    android:textColor="@color/content_txt_A"
                    android:textSize="@dimen/middle_l" />

                <TextView
                    android:id="@+id/record_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:text="状态"
                    android:textColor="@color/content_txt_A"
                    android:textSize="@dimen/middle_l" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/bet_record_lottery_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/buy_lottery_count_down"
                    android:textSize="@dimen/middle_l" />

                <TextView
                    android:id="@+id/bet_record_lottery_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/buy_lottery_count_down"
                    android:textSize="@dimen/middle_l" />

                <TextView
                    android:id="@+id/bet_record_lottery_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:textColor="@color/buy_lottery_count_down"
                    android:textSize="@dimen/middle_l" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>