<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@color/index_page_bg"
    >
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/top_banner"
	    android:paddingTop="@dimen/top_padding_top"
	    android:paddingBottom="@dimen/top_padding_bottom"
	    android:background="@drawable/top_bg"
	    android:gravity="center_vertical"
		>
		<TextView
		    android:id="@+id/search_user_nickname"
			android:layout_width="wrap_content"
	    	android:layout_height="fill_parent"
			android:textColor="@color/white"
			android:layout_marginLeft="@dimen/top_margin"
			android:textSize="@dimen/title"
			android:gravity="center"
			/>
	</RelativeLayout>
	
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingLeft="@dimen/content_padding_top"
	    android:paddingRight="@dimen/content_padding_bottom"
		android:layout_marginTop="@dimen/top_margin"
	    >
		    <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:background="@drawable/choice_charge_bg"
			    >
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:padding="10dp"
				    >
				    <LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
			        	android:layout_weight="1"
					    >
					    <ImageView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:src="@drawable/small_icon_onsale_launch"
					        />
					</LinearLayout>
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
			        	android:layout_weight="18"
					    >
					    <TextView
							android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
							android:textColor="@color/content_txt_6"
							android:textSize="@dimen/big_m"
							android:text="在售的发起方案"
							/>
					</LinearLayout>
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:gravity="center"
			        	android:layout_weight="1"
					    >
					    <ImageView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginTop="3dp"
					        android:src="@drawable/expand"
					        />
					</LinearLayout>
				</LinearLayout>
				<ImageView 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:src="@drawable/line_xml"
			        />
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:padding="10dp"
				    >
				    <LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
			        	android:layout_weight="1"
					    >
					    <ImageView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginTop="3dp"
					        android:src="@drawable/small_icon_onsale_documentary"
					        />
					</LinearLayout>
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
			        	android:layout_weight="18"
					    >
					    <TextView
							android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
							android:textColor="@color/content_txt_6"
							android:textSize="@dimen/big_m"
							android:text="在售的跟单方案"
							/>
					</LinearLayout>
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:gravity="center"
			        	android:layout_weight="1"
					    >
					    <ImageView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginTop="3dp"
					        android:src="@drawable/expand"
					        />
					</LinearLayout>
				</LinearLayout>  
				<ImageView 
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:src="@drawable/line_xml"
			        />
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:padding="10dp"
				    >
				    <LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
			        	android:layout_weight="1"
					    >
					    <ImageView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:src="@drawable/small_icon_big_prize"
					        />
					</LinearLayout>
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
			        	android:layout_weight="18"
					    >
					    <TextView
							android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
							android:textColor="@color/content_txt_6"
							android:textSize="@dimen/big_m"
							android:text="大奖战绩"
							/>
					</LinearLayout>
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:gravity="center"
			        	android:layout_weight="1"
					    >
					    <ImageView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginTop="3dp"
					        android:src="@drawable/expand"
					        />
					</LinearLayout>
				</LinearLayout>    
				<ImageView 
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:src="@drawable/line_xml"
			        />
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:padding="10dp"
				    >
				    <LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
			        	android:layout_weight="1"
					    >
					    <ImageView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:src="@drawable/small_icon_profit_statistics"
					        />
					</LinearLayout>
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
			        	android:layout_weight="18"
					    >
					    <TextView
							android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
							android:textColor="@color/content_txt_6"
							android:textSize="@dimen/big_m"
							android:text="盈利统计"
							/>
					</LinearLayout>
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:gravity="center"
			        	android:layout_weight="1"
					    >
					    <ImageView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginTop="3dp"
					        android:src="@drawable/expand"
					        />
					</LinearLayout>
				</LinearLayout>    
				    
			</LinearLayout>
			
	</ScrollView>
	
</LinearLayout>
