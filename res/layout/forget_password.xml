<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/index_page_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/forget_password_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_banner"
        android:background="@drawable/top_bg"
        android:gravity="center"
        android:orientation="vertical" >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forget_password_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/forget_password_title"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/forget_password_layout_remind"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/bg_360" >

            <TextView
                android:id="@+id/register_text360"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:text="请输入您注册时绑定的手机号码,如果您未绑定，请拨打客服电话400-00-58511找回密码。 "
                android:textColor="@color/text_grey"
                android:textSize="@dimen/big_s" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forget_password_layout_name"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/forget_password_layout_remind"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip" >

            <TextView
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_marginTop="5dip"
                android:paddingLeft="10dip"
                android:paddingTop="5dip"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/big_l" />

            <EditText
                android:id="@+id/forget_password_phonenumber"
                android:layout_width="120dip"
                android:layout_height="45dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/choice_charge_bg"
                android:hint="11位手机号"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColorHint="@color/text_tint"
                android:textSize="@dimen/middle_m" />

            <Button
                android:id="@+id/forget_password_getcheckcode_button"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/bg_btn_gray_to_darkgray_selector"
                android:hint="获取验证码"
                android:maxLength="20"
                android:textColor="@drawable/tcolor_black_to_gray_selector"
                android:textSize="@dimen/big_s" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forget_password_layout_password"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/forget_password_layout_name"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="7dp" >

            <TextView
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_marginTop="5dip"
                android:paddingLeft="10dip"
                android:paddingTop="5dip"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="@dimen/big_l" />

            <EditText
                android:id="@+id/forget_password_check_code"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/choice_charge_bg"
                android:hint="输入6位手机验证码"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColorHint="@color/text_tint"
                android:textSize="@dimen/middle_m" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>