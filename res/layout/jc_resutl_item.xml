<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingBottom="2dp"
    android:background="@drawable/buy_lottery_cz_bg_selector"
    >
    <LinearLayout 
        android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
        >
        <TextView
			android:id="@+id/changci"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_black"
		    android:layout_marginLeft="1dip"
		    android:layout_marginRight="3dip"
		    android:textSize="@dimen/middle_m"
		    android:gravity="left"
		    android:text="周三001"
			/>
	
		<TextView
			android:id="@+id/duizhen"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_black"
		    android:textSize="@dimen/middle_m"
		    android:text="中国队109:125日本队"
		    android:gravity="center_vertical"
		    android:layout_weight="1"
			/>
		<LinearLayout
		    android:id="@+id/danma_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
			android:gravity="center"
			>
			<CheckBox 
		 		android:id="@+id/danma"
		        android:layout_width="22dp"
		        android:layout_height="22dp"
		        android:background="@drawable/jc_dan_icon_s"
		       	android:gravity="center"
		        android:button="@null"
	        	android:clickable="false"
		        />
		</LinearLayout>
        
    </LinearLayout>
	
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_xml"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        />
    <LinearLayout 
        android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="0dp"
	    android:layout_margin="0dp"
	    android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
		    android:layout_marginLeft="2dip"
            android:textSize="@dimen/middle_m" 
            android:gravity="left"
            android:text="投注:"
            />
        <com.zch.safelottery.custom_control.AutoWrapView
              android:id="@+id/touzhu"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
              android:layout_marginRight="2dip"
              android:layout_marginLeft="2dip"
              android:gravity="center_vertical|left"
			  android:layout_weight="1"
		      >
		</com.zch.safelottery.custom_control.AutoWrapView>
        
		<TextView
			android:id="@+id/rangqiu_fen"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/content_txt_red"
		    android:textSize="@dimen/middle_m"
		    android:text="彩果:7+"
		    android:gravity="center"
			/>
		<TextView
			android:id="@+id/caiguo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/content_txt_red"
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="5dip"
		    android:textSize="@dimen/middle_m"
		    android:text="主胜"
		    android:gravity="center"
			/>
        
     </LinearLayout>
	
	

</LinearLayout>
