<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    >
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/content_padding_right"
        android:background="@drawable/combine_bg"
        android:gravity="center_vertical" >


        <LinearLayout 
            android:id="@+id/combine_lottery_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
        	android:gravity="center"
        	android:orientation="vertical"
            >
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/content_padding_right"
            android:layout_marginLeft="@dimen/content_padding_left"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发起人:"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/middle_l" />

                <TextView
                    android:id="@+id/combine_lottery_user_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/middle_l" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="方案金额:"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle_s" />

                <TextView
                    android:id="@+id/combine_lottery_money_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0元"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle_s" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未认购:"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle_s" />

                <TextView
                    android:id="@+id/combine_lottery_money_buy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0元"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle_s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/combine_lottery_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="彩种"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle_l" />

                <TextView
                    android:id="@+id/combine_lottery_commission"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="佣金"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle_l" />

                <TextView
                    android:id="@+id/combine_lottery_order_statu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="left"
                    android:text="状态"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/middle_l" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/content_padding_right"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:background="@drawable/combine_bg"
        >
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
            <TextView 
               android:id="@+id/combine_tobuy_scheme_stutas"
               android:layout_width="fill_parent"
           	   android:layout_height="wrap_content"
           	   android:textSize="@dimen/middle_l"
           	   android:textColor="@color/text_black"
               />
          <TextView 
               android:id="@+id/combine_tobuy_start_time"
               android:layout_width="fill_parent"
           	   android:layout_height="wrap_content"
           	   android:textSize="@dimen/middle_l"
           	   android:textColor="@color/text_black"
               />
       </LinearLayout>
       
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <TextView 
               android:id="@+id/combine_tobuy_beitou_num"
               android:layout_width="0dp"
           	   android:layout_height="wrap_content"
           	   android:layout_weight="1"
           	   android:textSize="@dimen/middle_l"
           	   android:textColor="@color/text_black"
               />
           <TextView 
               android:id="@+id/combine_tobuy_play_method"
               android:layout_width="0dp"
           	   android:layout_height="wrap_content"
           	   android:layout_weight="1"
           	   android:textSize="@dimen/middle_l"
           	   android:textColor="@color/text_black"
               />
       </LinearLayout>
       
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/margin_3"
           android:orientation="vertical"
           >
           <TextView 
               android:layout_width="fill_parent"
           	   android:layout_height="wrap_content"
           	   android:textSize="@dimen/middle_l"
           	   android:textColor="@color/text_black"
           	   android:text="我要认购："
               />
           <LinearLayout 
               android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:gravity="center_vertical"
	           android:orientation="horizontal"
               >
               <EditText
	               android:id="@+id/combine_tobuy_tobuy"
	               android:layout_width="0dp"
	           	   android:layout_height="35dp"
	           	   android:background="@drawable/input_bg"
	           	   android:gravity="center_vertical"
	           	   android:layout_weight="1"
	           	   android:textSize="@dimen/big_m"
	           	   android:textColor="@color/text_grey"
	           	   android:hint="至少1元"
	           	   android:textColorHint="@color/text_grey"
	           	   android:inputType="number"
	           	   android:maxLength="9"
	           	   android:paddingLeft="5dp"
           	   	   android:layout_marginLeft="2dp"
	               />
               <TextView 
	               android:layout_width="wrap_content"
	           	   android:layout_height="wrap_content"
	           	   android:textSize="@dimen/middle_l"
	           	   android:textColor="@color/text_black"
	           	   android:layout_marginLeft="3dp"
	           	   android:layout_marginRight="3dp"
	           	   android:text="元"
	               />
           </LinearLayout>
           
       </LinearLayout>
       
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/margin_3"
           android:orientation="vertical"
           >
           <TextView 
               android:layout_width="fill_parent"
           	   android:layout_height="wrap_content"
           	   android:textSize="@dimen/middle_l"
           	   android:textColor="@color/text_black"
           	   android:text="参与者："
               />
           <Button
               android:id="@+id/combine_tobuy_participant"
               android:layout_width="fill_parent"
           	   android:layout_height="36dp"
           	   android:textSize="@dimen/middle_l"
           	   android:paddingLeft="5dp"
           	   android:gravity="left|center_vertical"
           	   android:textColor="@color/text_grey"
           	   android:background="@drawable/bg_spinner_selector"
               />
       </LinearLayout>
       
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/margin_3"
           android:orientation="vertical"
           >
           <TextView 
               android:layout_width="fill_parent"
           	   android:layout_height="wrap_content"
           	   android:textSize="@dimen/middle_l"
           	   android:textColor="@color/text_black"
           	   android:text="方案详情："
               />
           <Button
               android:id="@+id/combine_tobuy_scheme_detail"
               android:layout_width="fill_parent"
           	   android:layout_height="36dp"
           	   android:textSize="@dimen/middle_l"
           	   android:paddingLeft="5dp"
           	   android:gravity="left|center_vertical"
           	   android:textColor="@color/text_grey"
           	   android:background="@drawable/bg_spinner_selector"
               />
       </LinearLayout>
       
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/margin_3"
           android:orientation="vertical"
           android:layout_marginBottom="10dp"
           >
           <TextView 
               android:layout_width="fill_parent"
           	   android:layout_height="wrap_content"
           	   android:textSize="@dimen/middle_l"
           	   android:textColor="@color/text_black"
           	   android:text="方案宣言："
               />
           <TextView
               android:id="@+id/combine_tobuy_scheme_declaration"
               android:layout_width="fill_parent"
           	   android:layout_height="wrap_content"
           	   android:minHeight="36dp"
           	   android:gravity="center_vertical"
           	   android:paddingLeft="5dp"
           	   android:textSize="@dimen/middle_l"
           	   android:layout_marginLeft="2dp"
	           android:layout_marginRight="2dp"
           	   android:textColor="@color/text_grey"
           	   android:background="@drawable/combine_input_bg"
               />
       </LinearLayout>
       
   </LinearLayout>
   
</LinearLayout>