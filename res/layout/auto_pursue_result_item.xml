<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/auto_pursue_issue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="期次"
        android:textColor="@color/text_black"
        android:textSize="@dimen/big_s" />

    <TextView
        android:id="@+id/auto_pursue_mutiple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="倍数"
        android:textColor="@color/text_black"
        android:textSize="@dimen/big_s" />

    <TextView
        android:id="@+id/auto_pursue_current_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="当前投"
        android:textColor="@color/text_black"
        android:textSize="@dimen/big_s" />

    <TextView
        android:id="@+id/auto_pursue_sum_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="累计投"
        android:textColor="@color/text_black"
        android:textSize="@dimen/big_s" />

    <TextView
        android:id="@+id/auto_pursue_profit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="盈利"
        android:textColor="@color/text_black"
        android:textSize="@dimen/big_s" />

    <TextView
        android:id="@+id/auto_pursue_profit_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="盈利率"
        android:textColor="@color/text_black"
        android:textSize="@dimen/big_s" />

</LinearLayout>