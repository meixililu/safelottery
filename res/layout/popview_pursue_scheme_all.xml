<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/popview_main"
	android:background="#00000000"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:paddingTop="40dp"
	android:paddingBottom="30dp"
	>
	
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:orientation="vertical"
		android:background="@drawable/select_dialog_bg"
		>
		<LinearLayout
		    android:id="@+id/pursue_titel"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/top_banner" 
			android:orientation="vertical"
			android:gravity="center_vertical"
			android:background="@drawable/top_bg"
			>
			<TextView
			    android:id="@+id/buy_lotter_scheme_detail_title"
				android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
				android:textColor="@color/white"
				android:layout_marginLeft="@dimen/margin_10"
				android:textSize="@dimen/title"
				android:gravity="center"
				android:text="追号列表"
				/>
		</LinearLayout>
		<ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:padding="5dp"
		    android:layout_below="@+id/pursue_titel"
		    android:layout_above="@+id/pursue_below"
		    >
		    <LinearLayout 
		        android:id="@+id/buy_lotter_scheme_detail_content"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical"
		        >
		        
		    </LinearLayout>
		</ScrollView>
		<LinearLayout
		    android:id="@+id/pursue_below"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_alignParentBottom="true"
			android:gravity="center"
			android:background="@color/bottom_button_bg"
			>
			<Button
			    android:id="@+id/buy_lotter_scheme_detail_sure"
				android:layout_width="200dp"
		    	android:layout_height="40dp"
				android:layout_marginTop="7dp"
				android:layout_marginBottom="6dp"
				android:textColor="@drawable/tcolor_black_to_gray_selector"
				android:background="@drawable/bg_btn_gray_to_darkgray_selector"
				android:textSize="@dimen/big_m"
				android:gravity="center"
				android:text="确定"
				/>
		</LinearLayout>
	</RelativeLayout>
	
</LinearLayout>
