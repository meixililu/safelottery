<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/index_page_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/aboat_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_banner"
        android:background="@drawable/top_bg"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/top_padding_bottom"
        android:paddingTop="@dimen/top_padding_top" >

        <TextView
            android:id="@+id/search_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/top_margin"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/aboat_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/aboat_title"
        android:paddingLeft="@dimen/content_padding_top"
        android:paddingRight="@dimen/content_padding_bottom"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/top_margin"
            android:paddingTop="@dimen/top_margin" >

            <LinearLayout
                android:id="@+id/aboat_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_list_item_bg"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/aboat_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dip"
                        android:gravity="center_horizontal"
                        android:text="中彩票Android版"
                        android:textColor="@color/black"
                        android:textSize="@dimen/bigger_s" />

                    <TextView
                        android:id="@+id/aboat_2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aboat_1"
                        android:layout_marginTop="14dip"
                        android:gravity="center_horizontal"
                        android:text="©北京中彩汇网络科技有限公司"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/middle_l" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:src="@drawable/line_xml" />

                <LinearLayout
                    android:id="@+id/more_version"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="10dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/small_icon_help" />

                    <TextView
                        android:id="@+id/aboat_version"
                        android:layout_width="250dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_weight="1"
                        android:text="版本号：1.1.4"
                        android:textColor="@color/content_txt_6"
                        android:textSize="@dimen/big_m" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/line_xml" />

                <LinearLayout
                    android:id="@+id/aboat_tell"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_list_item_middle_selector"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="10dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon_aboat_tell" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_weight="1"
                        android:text="客服电话：400-00-58511"
                        android:textColor="@color/content_txt_6"
                        android:textSize="@dimen/big_m" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/expand" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/line_xml" />

                <LinearLayout
                    android:id="@+id/more_modify"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_list_item_middle_selector"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="10dip" >

