                <!-- > -->


                <!-- <TextView -->
                <!-- android:layout_width="0dp" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginLeft="wrap_content" -->
                <!-- android:textColor="@color/content_txt_6" -->
                <!-- android:textSize="@dimen/big" -->
                <!-- android:layout_marginLeft="2dip" -->
                <!-- android:text="942200733  2523887143 " -->
                <!-- android:layout_weight="1" -->
                <!-- /> -->
                <!-- </LinearLayout> -->

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/setting_info_layout_remind"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboat_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/bg_360" >

                <ImageView
                    android:id="@+id/setting_info_remind_image"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="1dip"
                    android:background="@drawable/remind" />

                <TextView
                    android:id="@+id/setting_info_remind_text"
                    android:layout_width="30dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/setting_info_remind_image"
                    android:gravity="center_vertical"
                    android:text="声明"
                    android:textColor="@color/green"
                    android:textSize="@dimen/middle_m" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setting_info_remind_image"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="3dp"
                    android:text="中彩汇客户端在用户使用过程中不收取任何费用,产生的流量费由运营商收取,建议选择适当的流量套餐或WIFI网络,以减少上网费用。"
                    android:textSize="@dimen/middle_s" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
