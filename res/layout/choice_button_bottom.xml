<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/choice_bottom_clear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_bg_selector"
            android:gravity="center" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空"
                android:textColor="@color/white"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/shuangseqiu_delete"
                android:textSize="@dimen/big_m" 
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choice_bottom_random"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_center_bg_selector"
            android:gravity="center" >

            <TextView
                android:id="@+id/random_select_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机选"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/shuangseqiu_random"
                android:textSize="@dimen/big_m" 
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choice_bottom_select"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_bg_selector"
            android:gravity="center" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/shuangseqiu_queren"
                android:textSize="@dimen/big_m" 
                />
        </LinearLayout>
</LinearLayout>

