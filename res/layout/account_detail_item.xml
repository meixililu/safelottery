<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/content_padding_top"
    android:paddingRight="@dimen/content_padding_bottom"
    android:paddingBottom="@dimen/content_padding_bottom"
     >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buy_lottery_cz_bg_selector"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期："
                android:textColor="@color/text_black"
                android:textSize="@dimen/big_m" />

            <TextView
                android:id="@+id/account_detail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2011-11-25 20:30"
                android:textColor="@color/text_black"
                android:textSize="@dimen/big_m" />
        </LinearLayout>

        <ImageView
            android:id="@+id/account_detail_item_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dip"
            android:src="@drawable/line_dotted" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/account_detail_item_money"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="@color/content_txt_A"
                android:textSize="@dimen/middle_l" />

            <TextView
                android:id="@+id/account_detail_item_sort"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="资金类型"
                android:textColor="@color/content_txt_A"
                android:textSize="@dimen/middle_l" />

            <TextView
                android:id="@+id/account_detail_item_notes"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="状态"
                android:textColor="@color/content_txt_A"
                android:textSize="@dimen/middle_l" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/account_detail_item_money_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="100"
                android:singleLine="true"
                android:textColor="@color/buy_lottery_count_down"
                android:textSize="@dimen/middle_l" />

            <TextView
                android:id="@+id/account_detail_item_sort_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="账户余额"
                android:textColor="@color/buy_lottery_count_down"
                android:textSize="@dimen/middle_l" />

            <TextView
                android:id="@+id/account_detail_item_notes_value"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="无"
                android:textColor="@color/buy_lottery_count_down"
                android:textSize="@dimen/middle_l" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>