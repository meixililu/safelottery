<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/style_show_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_banner"
        android:background="@drawable/top_bg"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/top_padding_bottom"
        android:paddingTop="@dimen/top_padding_top" >

        <TextView
            android:id="@+id/normal_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_margin"
            android:gravity="center"
            android:text="验证登录密码"
            android:textColor="@color/white"
            android:textSize="@dimen/bigger_s" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="为了你的账户安全，请确认您的登录密码"
                android:textColor="@color/black"
                android:textSize="@dimen/big_m" />

            <EditText
                android:id="@+id/dialog_password_ed"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dp"
                android:password="true"
                android:maxLength="16"
                android:background="@drawable/choice_charge_bg"
                android:hint="输入您的登录密码"
                android:singleLine="true"
                android:textSize="@dimen/middle_l" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/style_show_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:background="@color/bottom_button_bg"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingTop="8dp" >

        <Button
            android:id="@+id/dialog_password_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gray_to_darkgray_selector"
            android:text="确定"
            android:textColor="@drawable/tcolor_black_to_gray_selector"
            android:textSize="@dimen/big_s" />
    </LinearLayout>

</LinearLayout>