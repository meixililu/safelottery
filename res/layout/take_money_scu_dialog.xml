<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_dialog_bg" >

    <TextView
        android:id="@+id/take_money_scu_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_banner"
        android:background="@drawable/top_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="@dimen/title" />

    <TextView
        android:id="@+id/take_money_scu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/take_money_scu_title"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:text="您的提现请求提交成功，我们将在3个工作日内处理您的请求。"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/bigger_s" />

    <LinearLayout
        android:id="@+id/take_money_scu_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_below="@+id/take_money_scu_text"
        android:layout_marginTop="2dip"
        android:background="@color/bottom_button_bg" >

        <Button
            android:id="@+id/take_money_scu_btn_sure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="@dimen/big_s" />
    </LinearLayout>

</RelativeLayout>