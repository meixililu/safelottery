                    android:text="农业银行"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/big_m" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
