<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_index_table_item_selector"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="7dp"
    android:paddingRight="6dp"
    android:paddingTop="3dp" >

    <LinearLayout
        android:id="@+id/combine_lottery_percent"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_padding_left"
        android:layout_marginRight="@dimen/content_padding_right"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起人:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/middle_l" />

            <TextView
                android:id="@+id/combine_lottery_user_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="用户名"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/middle_l" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方案金额:"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middle_s" />

            <TextView
                android:id="@+id/combine_lottery_money_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="000000元"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middle_s" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未认购:"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middle_s" />

            <TextView
                android:id="@+id/combine_lottery_money_buy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="000000元"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middle_s" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/combine_lottery_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="彩种"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middle_l" />

            <TextView
                android:id="@+id/combine_lottery_commission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="佣金"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middle_l" />

            <TextView
                android:id="@+id/combine_lottery_order_statu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="left"
                android:text="状态"
                android:textColor="@color/text_black"
                android:textSize="@dimen/middle_l" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/combine_lottery_is_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_padding_right"
        android:layout_marginRight="@dimen/content_padding_left"
        android:src="@drawable/combine_list_item_triangle" />

</LinearLayout>