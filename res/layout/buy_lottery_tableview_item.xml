<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="@drawable/framelayout_foreground_cover_selector" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/index_page_table_item_bg_color"
        android:paddingBottom="4dp" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_k3" />

        <LinearLayout
            android:id="@+id/item_msg_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/item_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-9dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="返奖率59%"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/middle_l" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_msg_layout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:shadowColor="@color/text_grey"
            android:layout_marginTop="-5dp"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:text="快3"
            android:textColor="@color/text_black"
            android:textSize="@dimen/bigger_m"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_today"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/index_page_table_today"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_hot"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/index_page_table_hot"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_name"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="加奖"
            android:textColor="@color/white"
            android:textSize="@dimen/small_l"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>