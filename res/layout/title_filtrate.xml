<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/top_banner"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/title_filtrate_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:gravity="left|center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/title" />

    <FrameLayout
        android:id="@+id/title_filtrate_listener_frame"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:foreground="@drawable/bg_btn_none_to_red_selector"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title_filtrate_btn_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:singleLine="true"
                android:visibility="gone"
                android:textColor="@drawable/top_btn_txt_color_selector"
                android:textSize="@dimen/big_m" />

<!--             <TextView  -->
<!--                 android:id="@+id/title_filtrate_btn_gap_name_to_icon" -->
<!--                 android:layout_height="fill_parent" -->
<!--                 android:layout_width="@dimen/margin_5" -->
<!--                 android:visibility="gone" -->
<!--                 /> -->
            <ImageView
                android:id="@+id/title_filtrate_btn_icon"
                android:layout_width="@dimen/title_icon_size"
                android:layout_height="@dimen/title_icon_size"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/margin_3"
                android:visibility="gone"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>