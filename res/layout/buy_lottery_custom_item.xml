<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/buy_lottery_item_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_none_to_cyan_selector"
        android:gravity="center"
        android:layout_marginTop="@dimen/top_padding_top"
        android:layout_marginBottom="@dimen/top_padding_bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/buy_lottery_item_img"
            android:layout_width="90dp"
            android:layout_height="90dp" 
            />
    </LinearLayout>

</LinearLayout>