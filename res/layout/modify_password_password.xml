	    <ScrollView 
	        android:layout_below="@+id/modify_password_title"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="10dip"
	        >
	
	<RelativeLayout
		android:id="@+id/modify_password_content"
		android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
		>
			<LinearLayout
				android:id="@+id/modify_password_layout_old_password"
				android:layout_width="fill_parent"
				android:layout_height="50dip"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				>
				
				<TextView
					android:layout_width="80dip"
					android:layout_height="50dip"
					android:layout_marginTop="5dip"
					android:paddingLeft="20dip"
					android:text="原密码"
					android:textSize="@dimen/big_l"
					android:paddingTop="5dip"
					android:textColor="@color/black"
					/>
					
				<EditText
					android:id="@+id/modify_password_oldpassword"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="请输入原密码"
					android:layout_marginTop="5dip"
					android:layout_marginLeft="5dip"
					android:password="true"
					android:singleLine="true"
					android:background="@drawable/choice_charge_bg"
					/>
					
			</LinearLayout>
			    
			<LinearLayout
				android:id="@+id/modify_password_layout_password"
				android:layout_below="@+id/modify_password_layout_old_password"
				android:layout_width="fill_parent"
				android:layout_height="50dip"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				>
				
				<TextView
					android:layout_width="80dip"
					android:layout_height="50dip"
					android:layout_marginTop="5dip"
					android:paddingLeft="20dip"
					android:text="新密码"
					android:textSize="@dimen/big_l"
					android:paddingTop="5dip"
					android:textColor="@color/black"
					/>
					
				<EditText
					android:id="@+id/modify_password_newpassword"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="请输入新密码"
					android:layout_marginTop="5dip"
					android:layout_marginLeft="5dip"
					android:password="true"
					android:singleLine="true"
					android:background="@drawable/choice_charge_bg"
					/>
					
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/modify_password_layout_repassword"
				android:layout_below="@+id/modify_password_layout_password"
				android:layout_width="fill_parent"
				android:layout_height="50dip"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				>
				
				<TextView
					android:layout_width="80dip"
					android:layout_height="50dip"
					android:layout_marginTop="5dip"
					android:text="重复密码"
					android:textSize="@dimen/big_l"
					android:paddingTop="5dip"
					android:paddingLeft="5dip"
					android:textColor="@color/black"
					/>
					
				<EditText
					android:id="@+id/modify_password_repassword"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="请再次输入密码"
					android:layout_marginTop="5dip"
					android:layout_marginLeft="5dip"
					android:password="true"
					android:singleLine="true"
					android:background="@drawable/choice_charge_bg"
					/>
							
			</LinearLayout>
	
	</RelativeLayout>
	
	</ScrollView>
</RelativeLayout>
