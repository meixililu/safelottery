<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/account_detail_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_banner"
        android:background="@drawable/top_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        android:text="账户明细"
        android:textColor="@color/white"
        android:textSize="@dimen/title" />

    <TextView
        android:id="@+id/account_detail_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="交易时间："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/bigger_s" />

    <ImageView
        android:id="@+id/account_detail_line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/account_detail_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="提款金额："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/bigger_s" />

    <ImageView
        android:id="@+id/account_detail_line2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/account_detail_short"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="交易类型："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/bigger_s" />

