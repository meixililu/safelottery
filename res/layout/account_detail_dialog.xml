    <ImageView
        android:id="@+id/account_detail_line4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/account_detail_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="状态："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/bigger_s" />

    <ImageView
        android:id="@+id/account_detail_line5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/account_detail_order_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="订单号："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/bigger_s" />

    <ImageView
        android:id="@+id/account_detail_line6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/account_detail_memo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="备注："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/bigger_s" />

    <LinearLayout
        android:id="@+id/account_detail_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_marginTop="2dip"
        android:background="@color/bottom_button_bg" >

        <Button
            android:id="@+id/account_detail_close"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gray_to_darkgray_selector"
            android:textColor="@drawable/tcolor_black_to_gray_selector"
            android:text="关闭"
            android:textSize="@dimen/big_s" />
    </LinearLayout>

